<h1>articles</h1>

<p>
  <%= link_to 'new article', :new_article %>
</p>

<% if @articles.present? %>
  <% @articles.each do |article| %>
    <%= link_to article.title, article %><br>
    <%= link_to 'edit', [:edit, article] %><br>
    <%= link_to 'delete', article, method: :delete, confirm: 'really?' %><br>
    <hr>
  <% end %>
<% else %>
    no news
<% end %>
    


