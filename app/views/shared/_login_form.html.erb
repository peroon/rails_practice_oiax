<h2>login form</h2>

<% if flash.alert %>
  <%= flash.alert %>
<% end %>

<%= form_tag :session do %>
<table id="login_form">
  <tr>
    <td align="right">email</td>
    <td><%= text_field_tag 'email', '', style:'width:120px' %></td>
  </tr>

  <tr>
    <td align="right">password</td>
    <td><%= text_field_tag 'password', '', style:'width:120px' %></td>
  </tr>

  <tr>
    <td colspan="2" align="center">
      <input type="submit" value="login">
    </td>
  </tr>
</table>
<%= hidden_field_tag 'from', request.path %>
<% end %>


